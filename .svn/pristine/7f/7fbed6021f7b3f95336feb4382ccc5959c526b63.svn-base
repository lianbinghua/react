import { Link } from 'react-router'
import './footerStyle'

var Menu = React.createClass({
	handleClick:function(){
		event.preventDefault();
        this.props.onSelect(this.props.link);
	},
	render:function(){
		var styleName = this .props.active ? "active" : "" ;
		return (
			<Link to={this.props.link} onClick={this.handleClick}><span className={styleName}>{this.props.children}</span></Link>
		)

	}
});
var Footer = React.createClass({
		getInitialState: function () {
			return {link: '/home' }
		},
		handleClick: function (link) {
 			this.setState({link:link})
 		},
		render:function(){
			var _this = this;
			var items = [
				{link:"/home",text:"首页"},
				{link:"/tutor",text:"攻略"},
				{link:"/discover",text:"发现"},
				{link:"/user",text:"我的"}
			]
			var menus = items.map(function(item){
				return (
					<Menu key={item.link} link={item.link} active={_this.state.link == item.link} onSelect={_this.handleClick} >{item.text}</Menu>
				)
			})
			return(
				<div className="footer">
					{menus}
				</div>
			)
		}
});
module.exports = Footer;
