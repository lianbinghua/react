@charset "UTF-8";
.user{
	background:url(http://img01.ttmimg.com/www/images/stonescms/2016160307/6792da6c4a104f47.png) repeat !important;
	.userHeader{ 
		width:100%; 
		height:244px;
		position:relative;
		background:url(http://img01.ttmimg.com/www/images/stonescms/2864e33892ea6152.jpg) no-repeat; 
		background-size:100% 100%;	
	}
	.username{ font-size: 15px; font-weight: bold; color: #FFF; text-align: center; padding: 10px 0 2px 0; margin-top: 30px;}
	.cicleBg{ 
		width: 80px; 
		height: 80px; 
		margin: 0 auto; 
		background: #dfd4cf;
		border-radius: 40px;
		-webkit-border-radius: 40px;
		-moz-border-radius: 40px;
		position: relative;       
	}
	.cicleTxt{ 
		width: 72px; 
		height: 72px; 
		background: #a6a2a1; 
		border-radius: 36px;
		-webkit-border-radius: 36px;
		-moz-border-radius: 36px;
		position: relative;
		color: #FFF;
		font-size: 12px;
		top: 4px;
		left: 4px;
		.head_img img{ width:72px; height:72px; border-radius:72px; border:none;}
	}
	.loginReg{ 
		line-height: 72px; 
		text-align: center;
	}
	.loginReg a{ color: #FFF; font-size: 12px; background:none} 
	.userMenu{
	position:relative;
		ul{
			box-sizing: border-box;
			overflow: hidden;
			margin-top: 18px;
			li{
				box-sizing: border-box;
			    width: 50%;
			    float: left;
			    text-align: center;
			    border-right:1px solid #d8d8d8;
			    border-bottom:1px solid #d8d8d8;
			    .menuList{
			    	.myOrder{
			    		background: url(http://img01.ttmimg.com/www/images/stonescms/d7e605eb0c9088be.png) no-repeat;
						width: 60px;
						height: 60px;
						background-size: 60px 60px;
						margin: 18px auto 8px;
			    	}
			    	.myComment{
						background: url(http://img01.ttmimg.com/www/images/stonescms/226f51eac78b073b.png) no-repeat;
						width: 60px;
						height: 60px;
						background-size: 60px 60px;
						margin: 18px auto 8px;
					}
					.myCollection{
						background: url(http://img01.ttmimg.com/www/images/stonescms/2016160303/9e5bfd4367dd3a63.png) no-repeat;
						width: 60px;
						height: 60px;
						background-size: 60px 60px;
						margin: 18px auto 8px;
					}
					.myAddress{
						background: url(http://img01.ttmimg.com/www/images/stonescms/2016160303/1a4dfca6a1b35e58.png) no-repeat;
						width: 60px;
						height: 60px;
						background-size: 60px 60px;
						margin: 18px auto 8px;
					}
					p{ padding-bottom: 8px; font-size: 12px; color: #363636;}
			    }
			}
			li:nth-child(2n){border-right:none}
		    li:nth-child(3),li:nth-child(4){border-bottom:none}
		}		
	}
	
	@media all and (min-width:320px) and (max-height:568px)  {
		.userHeader{ 
			height:210px;
			background-size:100% 100%;
		}
		.username{ margin-top: 20px;}
		.cicleBg {
		    position: relative;
		    top: 35px !important;
		}
		.userMenu ul {
		    margin-top: 18px;
		}
		.writeCicle{ top: 30px;}
		#Js-loginOut.writeCicle{ top: 45px;}
	}
	@media all and (min-width:375px) {
	 	.userHeader{ 
			height:244px;
			background-size:100% 100%;
		}
		.username{ margin-top: 50px;}
		.cicleBg {
		    position: relative;
		    top: 55px !important;
		}
		.userMenu ul {
		    margin-top: 18px;
		}
		.writeCicle{ top: 55px;}
		#Js-loginOut.writeCicle{ top: 65px;}
	}
	@media all and (min-width:320px) and (max-height:480px)  {
		.userHeader{ 
			height:188px;
			background-size:100% 100%;
		}
		.username{ margin-top: 10px;}
		.cicleBg {
		    position: relative;
		    top: 25px !important;
		}
		.userMenu ul {
		    margin-top: 10px;
		}
	}
}
