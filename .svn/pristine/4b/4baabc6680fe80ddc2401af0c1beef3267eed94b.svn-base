@charset "UTF-8";
body{ background: #ffffff;}
.updateName{
	height: auto; overflow: hidden; padding: 20px;
	ul{ 
		margin: 0 10px;
		li{ 
			height: 44px; line-height: 44px; border-bottom: solid 1px #d8d8d8; padding: 0 5px;
			.updateName_icon {
			    background: url(http://img01.ttmimg.com/www/images/stonescms/b779a9f79823fe3e.png) no-repeat;
			    width: 20px;
			    height: 22px;
			    background-size: 20px 22px;
			    display: inline-block;
			    position: relative;
			    top: 8px;
			}
			input{ border: none; height: 22px; font-size: 13px; top: 5px; position: relative; outline:none; margin-left:5px;}
		}
	}
	.updateName-error-msg { 
		padding: 10px;
		span{ color: #f06450; font-size: 14px;}
	}
	.mt10{ margin-top:10px;}
}

