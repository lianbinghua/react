.footer{
	z-index: 80;
	height: 50px;
	width: 100%;	
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	border-top: 1px solid #d8d8d8;
}

.footer span{
	display: block;
	width: 25%;
	text-align: center;
	float: left;
	color: #696969;
	font-size: 18px;
	line-height: 50px;
}
.footer .active{
	color:red;
}